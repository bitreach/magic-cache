{
  "compilerOptions": {
    "strict": true,
    "esModuleInterop": true,
    "target": "es2021",
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "sourceMap": true,
    "outDir": "dist",
    // required for fireORM
    // "experimentalDecorators": true
    "allowSyntheticDefaultImports": true
  },
  "ts-node": {
    // Tell ts-node CLI to install the --loader automatically
    "esm": true
  },
  "lib": ["es2021"]
}
